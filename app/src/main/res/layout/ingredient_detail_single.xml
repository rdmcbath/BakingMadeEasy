<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/ingredient_detail_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/ingredient_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ingredient_name"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/primary_text"
            android:textSize="20sp"
            tool:text="ingredient_name"/>

        <TextView
            android:id="@+id/ingredient_quantity"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/ingredient_name"
            android:textColor="@color/secondary_text"
            tool:text="tbsp"/>

        <TextView
            android:id="@+id/ingredient_measure"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/ingredient_name"
            android:layout_toEndOf="@+id/ingredient_quantity"
            android:layout_toRightOf="@+id/ingredient_quantity"
            android:textColor="@color/secondary_text"
            tool:text="Cup"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>